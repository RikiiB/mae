<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DatenspeicherFragment">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/dateiinhaltInput"
            app:layout_constraintTop_toBottomOf="@+id/dateinameInput"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:hint="Dateiinhalt" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/ordnernameInput"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:hint="Ordnername" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/dateinameInput"
            app:layout_constraintTop_toBottomOf="@+id/ordnernameInput"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Dateiname" />

    <Button
            android:text="Save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/saveStorageButton"
            app:layout_constraintTop_toBottomOf="@+id/dateiinhaltInput"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:text="Load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loadStorageButton"
            app:layout_constraintTop_toBottomOf="@+id/saveStorageButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

    <Button
            android:text="Delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/deleteStorageButton"
            app:layout_constraintTop_toBottomOf="@+id/loadStorageButton"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>